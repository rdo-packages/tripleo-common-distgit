[project]
	description = Packaging content for tripleo (distgit)
[access "refs/*"]
  read = group tripleo-common-distgit-core
  owner = group openstack/tripleo-common-distgit-ptl
[access "refs/heads/*"]
	label-Code-Review = -2..+2 group openstack/tripleo-common-distgit-ptl
	label-Code-Review = -2..+2 group tripleo-common-distgit-core
	label-Verified = -2..+2 group openstack/tripleo-common-distgit-ptl
	label-Workflow = -1..+1 group openstack/tripleo-common-distgit-ptl
	label-Workflow = -1..+1 group tripleo-common-distgit-core
	label-Workflow = -1..+0 group Registered Users
	submit = group openstack/tripleo-common-distgit-ptl
	read = group Registered Users
    read = group tripleo-common-distgit-core
[access "refs/meta/config"]
    read = group Registered Users
    read = group tripleo-common-distgit-core
[receive]
	requireChangeId = true
[submit]
	mergeContent = false
	action = fast forward only
